{
  "name": "ticket-yapp",
  "description": "Yodl ticketing mini-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "dev:phone": "next dev 0.0.0.0 3000",
    "lint": "next lint",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "vercel-build": "prisma generate && prisma migrate deploy && next build",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "npx prisma migrate reset --force",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/themes": "^3.2.1",
    "@rainbow-me/rainbowkit": "^2.2.4",
    "@tanstack/react-query": "^5.68.0",
    "@yodlpay/tokenlists": "^0.8.11",
    "@yodlpay/yapp-sdk": "^1.8.0",
    "@yudiel/react-qr-scanner": "^2.2.1",
    "cuer": "^0.0.2",
    "date-fns": "^4.1.0",
    "ethers": "^6.13.5",
    "next": "15.2.2",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "prisma": "^6.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-intersection-observer": "^9.16.0",
    "siwe": "^3.0.0",
    "vconsole": "^3.15.1",
    "viem": "^2.23.10",
    "wagmi": "^2.14.13",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.2.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  }
}
